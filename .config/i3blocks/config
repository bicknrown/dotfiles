#command=~/.config/i3blocks/scripts/disk
#LABEL=HOME: 
#DIR=/home/
#ALERT_LOW=10
#interval=30
#color=#2eeeff

[battery]
command=~/.config/i3blocks/scripts/battery
interval=30
LABEL=BAT 
color=#2eeeff
#LABEL=âš¡
#BAT_NUMBER=0

[epoch]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1
color=#c50ed2

