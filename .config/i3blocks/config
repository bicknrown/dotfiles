# nick's i3blocks config

[mediaplayer]
command=~/.config/i3blocks/scripts/mediaplayer
instance=spotify
interval=5
signal=10
color=#c50ed2

[volume]
command=~/.config/i3blocks/scripts/volume
LABEL=VOL 
interval=once
signal=10
color=#9c40ff

[pacman_updates]
command=checkupdates | wc -l
interval=once
LABEL=PACMAN:
color=#c50ed2 

[aur_updates]
command=yay -Qu | wc -l
interval=once
LABEL=AUR: 
color=#c50ed2

[iface]
command=~/.config/i3blocks/scripts/iface
#LABEL=wlan0:
#IFACE=wlan0
#ADDRESS_FAMILY=inet6?
color=#2eeeff
interval=10

[cpu]
command=~/.config/i3blocks/scripts/cpu
interval=10
min_width=CPU: 100.00%
LABEL=CPU: 
color=#9c40ff

[load]
command=~/.config/i3blocks/scripts/load
interval=10
LABEL=LOAD: 
color=#9c40ff

[memory]
label=MEM: 
command=~/.config/i3blocks/scripts/memory
separator=false
interval=30
color=#9c40ff

[rootdisk]
command=~/.config/i3blocks/scripts/disk
LABEL=ROOT:
DIR=/
#ALERT_LOW=10
interval=30
color=#2eeeff

[homedisk]
command=~/.config/i3blocks/scripts/disk
LABEL=HOME: 
DIR=/home/
#ALERT_LOW=10
interval=30
color=#2eeeff

[epoch]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1
color=#c50ed2

